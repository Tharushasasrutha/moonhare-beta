{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES2015",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist/types",
        "lib": ["ES2018", "DOM"],
        "moduleResolution": "Node",
        "types": ["node", "jest", "csstype"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
